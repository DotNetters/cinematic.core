@model SessionsDeleteConfirmedViewModel

@{
    ViewBag.Title = Literals.DeleteSession;
}

<h2>@Literals.DeleteSession</h2>
<hr />

<div class="alert alert-danger">@Model.Exception.Message</div>
<div>
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="Session.TimeAndDate"></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Session.TimeAndDate)
        </dd>

        <dt>
            <label asp-for="Session.Status"></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Session.Status)
        </dd>

    </dl>

    <a asp-action="Index" class="btn btn-sm btn-default">@Literals.Back</a>
</div>

@section Scripts {
    <script type="text/javascript">
            $(function () { setActiveMenuItem("SessionsMenuItem"); });
    </script>
}