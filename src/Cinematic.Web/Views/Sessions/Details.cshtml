@model Session

@{
    ViewBag.Title = Literals.SessionDetails;
}

<h2>@Literals.SessionDetails</h2>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            <label asp-for="TimeAndDate"></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TimeAndDate)
        </dd>

        <dt>
            <label asp-for="Status"></label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

    </dl>
</div>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">@Literals.Edit</a>
    <a asp-action="Index" class="btn btn-sm btn-default">@Literals.Back</a>
</div>

@section Scripts {
    <script type="text/javascript">
            $(function () { setActiveMenuItem("SessionsMenuItem"); });
    </script>
}